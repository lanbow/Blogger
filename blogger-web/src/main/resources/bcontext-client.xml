<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

       <bean id="blogService"
             class="org.springframework.remoting.caucho.HessianProxyFactoryBean">
              <property name="serviceUrl"
                        value="http://localhost:8080/hessian/blogService" />
              <property name="serviceInterface" value="com.joker.bremote.service.BlogService" />
              <!--新增overloadEnabled属性，并把它的值设置为true，默认是false，则Hessian就能支持方法的重载了。-->
              <property name="overloadEnabled" value="true" />
       </bean>

    <bean id="userService"
          class="org.springframework.remoting.caucho.HessianProxyFactoryBean">
        <property name="serviceUrl"
                  value="http://localhost:8080/hessian/userService" />
        <property name="serviceInterface" value="com.joker.bremote.service.UserService" />
        <!--新增overloadEnabled属性，并把它的值设置为true，默认是false，则Hessian就能支持方法的重载了。-->
        <property name="overloadEnabled" value="true" />
    </bean>
</beans>